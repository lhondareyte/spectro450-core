[ $# -ne 1 ] && exit 0

export app=$1
libexec="/usr/local/libexec/spectro450"
if [ -f ${libexec}/libapp.sh ] ; then
	. ${libexec}/libapp.sh
fi
export app_bin="${ctndir}/$(echo $app | tr [A-Z] [a-z])"

if [ ! -x $app_bin ] ; then
	echo "$app : no such application."
	exit 1
fi

app_start () {
	if [ ! -z "$pid" ] ; then
		echo "$app is already running."
		return 1
	fi
	#
	# Save configuration if not present after installation
	if ([ ! -f /etc/${app}.conf ] && [ -f ${rscdir}/${app}.conf ]) ; then
		quiet install -m 644 ${rscdir}/${app}.conf /etc
		quiet saveconfig ${app}.conf
	fi
	#
	# Execute pre scripts if exists
	if [ -d ${rscdir}/preambule ] ; then
		for pre in ${rscdir}/preambule/S[0-9]_*
		do
			[ -x $pre ] && $pre
		done
	fi
	#
	# Set embedded libraries
	if [ -d ${appdir}/Frameworks/${platform} ] ; then
		export LD_LIBRARY_PATH=${appdir}/Frameworks/${platform}
	fi
	#
	# Pre-scripts could generate arguments file
	if [ -f /tmp/${app}.options ] ; then
		options=$(cat /tmp/${app}.options)
	fi
	#
	# Load environment variables if exists
	if [ -f $rscdir/environ ] ; then
		. $rscdir/environ
	fi
	#
	# Running $app with high priority
	if [ -x /usr/sbin/rtprio ] ; then
		/usr/sbin/rtprio 0 $app_bin $options
	else
		$app_bin $options 
	fi
	#
	# Execute post scripts ifle running (e.g ramdisk for soundfiles)
	if [ -d ${rscdir}/preambule ] ; then
		for pre in ${rscdir}/postambule/S[0-9]_*
		do
			[ -x $pre ] && $pre
		done
	fi
}

app_stop () {
	if [ -z "$pid" ] ; then
		echo "$app is already stopped."
		return 0
	fi
	for p in $pid 
	do
		kill $p
	done
	#
	# Execute cleaning scripts if exists
	if [ -d ${rscdir}/postambule ] ; then
		for post in ${rscdir}/postambule/K[0-9]_*
		do
			[ -x $post ] && $post
		done
	fi
	quiet saveconfig ${app}.conf
	rm -f /tmp/${app}.options
	sleep 1
}

case $(basename $0) in
	'openapp')
		app_start
		;;
	'closeapp')
		app_stop 
		;;
esac
